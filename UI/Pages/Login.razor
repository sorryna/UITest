@page "/login"
@inject NavigationManager NavigationManager

<h3>Login</h3>


<div class="container">
    <div class="col-md-6 offset-md-3 mt-5">
        <div class="card">
            <h4 class="card-header">Login</h4>
            <div class="card-body">
                <EditForm Model="@loginModel" OnValidSubmit="OnValidsubmit">
                    <div class="form-group">
                        <span id="error-message">@errorMessage</span>
                    </div>
                    <div class="form-group">
                        <label>Username</label>
                        <input @bind="loginModel.Username" id="username-input" class="form-control" />
                    </div>
                    <div class="form-group">
                        <label>Password</label>
                        <input @bind="loginModel.Password" id="password-input" type="password" class="form-control" />
                    </div>
                    <button class="btn btn-primary" type="submit">Login</button>
                </EditForm>
            </div>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {

    }
    public class LoginModel
    {
        public string Username { get; set; }
        public string Password { get; set; }
    }

    private LoginModel loginModel = new();
    string errorMessage = "";

    public void OnValidsubmit()
    {
        if (loginModel.Username == "sorry@gmail.com" && loginModel.Password == "1111")
        {
            NavigationManager.NavigateTo("logged-in");
        }
        else
        {
            errorMessage = "Wrong Username and Password";
        }
    }
}
